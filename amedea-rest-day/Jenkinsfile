pipeline {
    agent {
        docker {
            image 'maven:3.8.3-openjdk-17' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
    stages {
	stage('Initialize') { 
            steps {
				sh 'java -version'	
				sh 'mvn -v'	
            }
        }	    
        stage('Build') { 
            steps {
                sh 'mvn -U -X --file ./amedea-rest-parent  -DSERVICE_NAME=amedea-rest-day -DskipTests -Pprod clean install' 
            }
        }
    }
}
